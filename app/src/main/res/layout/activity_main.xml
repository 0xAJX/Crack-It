<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhis.crackit4.MainActivity">

    <ListView
        android:id="@+id/gameListView"
        android:layout_width="366dp"
        android:layout_height="262dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="201dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/num1"
            android:maxLength="1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:labelFor="@+id/num1" />

        <EditText
            android:id="@+id/num2"
            android:maxLength="1"
            android:labelFor="@+id/num2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/num3"
            android:maxLength="1"
            android:labelFor="@+id/num3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/num4"
            android:maxLength="1"
            android:labelFor="@+id/num4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned" />

        <EditText
            android:id="@+id/num5"
            android:maxLength="1"
            android:labelFor="@+id/num5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned" />
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="210dp"
        android:layout_height="39dp"
        android:layout_marginTop="104dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iview1"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/iview2"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/iview3"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/iview4"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/iview5"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" android:contentDescription="@string/todo" />
    </GridLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:onClick="buttonPress"
        android:text="@string/submit"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
