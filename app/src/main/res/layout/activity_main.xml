<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue_75"
    android:id="@+id/rl_container"
    tools:context="com.gtn.abhis.crackit4.MainActivity">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        >



        <EditText
            android:outlineAmbientShadowColor="@color/starlight"
            android:id="@+id/num1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/blue"
            android:inputType="numberSigned"
            android:labelFor="@+id/num1"
            android:cursorVisible="false"
            android:gravity="center"
            android:maxLength="1" />

        <EditText
            android:outlineAmbientShadowColor="@color/starlight"
            android:id="@+id/num2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:inputType="numberSigned"
            android:background="@color/blue"
            android:labelFor="@+id/num2"
            android:cursorVisible="false"
            android:gravity="center"
            android:maxLength="1" />

        <EditText
            android:outlineAmbientShadowColor="@color/starlight"
            android:id="@+id/num3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:inputType="numberSigned"
            android:background="@color/blue"
            android:labelFor="@+id/num3"
            android:cursorVisible="false"
            android:gravity="center"
            android:maxLength="1" />

        <EditText
            android:outlineAmbientShadowColor="@color/starlight"
            android:id="@+id/num4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:inputType="numberSigned"
            android:background="@color/blue"
            android:labelFor="@+id/num4"
            android:cursorVisible="false"
            android:gravity="center"
            android:maxLength="1" />

        <EditText
            android:outlineAmbientShadowColor="@color/starlight"
            android:id="@+id/num5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:inputType="numberSigned"
            android:labelFor="@+id/num5"
            android:background="@color/blue"
            android:cursorVisible="false"
            android:gravity="center"
            android:maxLength="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/LinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        >

        <ImageView
            android:id="@+id/iview1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:contentDescription="@string/todo"
            android:layout_marginHorizontal="5dp"
            />

        <ImageView
            android:id="@+id/iview2"
            android:layout_width="50dp"
            android:background="@color/blue"
            android:layout_height="50dp"
            android:contentDescription="@string/todo"
            android:layout_marginHorizontal="5dp"
            />

        <ImageView
            android:layout_marginHorizontal="5dp"
            android:id="@+id/iview3"
            android:layout_width="50dp"
            android:background="@color/blue"
            android:layout_height="50dp"
            android:contentDescription="@string/todo"
            />

        <ImageView
            android:layout_marginHorizontal="5dp"
            android:id="@+id/iview4"
            android:layout_width="50dp"
            android:background="@color/blue"
            android:layout_height="50dp"
            android:contentDescription="@string/todo"
            />

        <ImageView
            android:layout_marginHorizontal="5dp"
            android:id="@+id/iview5"
            android:layout_width="50dp"
            android:background="@color/blue"
            android:layout_height="50dp"
            android:contentDescription="@string/todo"
            />
    </LinearLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/submit"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:background="@drawable/buttonstylelightgradient"
        android:onClick="buttonPress"
        android:text="@string/submit"
        android:textColor="#fff"
        android:fontFamily="@font/bowlby_one_sc"
        />

    <ListView
        android:id="@+id/gameListView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="224dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>
