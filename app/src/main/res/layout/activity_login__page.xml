<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.gtn.abhis.crackit4.Login_Page"
            android:orientation="vertical">

            <Button
                android:id="@+id/AboutMe"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="460dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/buttonstylelightgradient"
                android:fontFamily="@font/bowlby_one_sc"
                android:onClick="about"
                android:text="About Me"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/Easy_Mode"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/buttonstylelightgradient"
                android:fontFamily="@font/bowlby_one_sc"
                android:onClick="easypressed"
                android:text="Easy Mode"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/Hard_Mode"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="260dp"
                android:background="@drawable/buttonstylelightgradient"
                android:fontFamily="@font/bowlby_one_sc"
                android:onClick="hardpressed"
                android:text="Hard Mode"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:background="@color/starlight"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <TextView
                    android:id="@+id/guess_the_number"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/bowlby_one_sc"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:paddingTop="15dp"
                    android:text="Guess The Number"
                    android:textSize="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <Button
                android:id="@+id/Quit"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="560dp"
                android:layout_marginTop="560dp"
                android:background="@drawable/buttonstylelightgradient"
                android:fontFamily="@font/bowlby_one_sc"
                android:onClick="quitit"
                android:text="Quit"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/howtoplay"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="360dp"
                android:layout_marginTop="360dp"
                android:background="@drawable/buttonstylelightgradient"
                android:fontFamily="@font/bowlby_one_sc"
                android:onClick="howtoplay"
                android:text="How to play"
                android:textColor="#fff"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>

