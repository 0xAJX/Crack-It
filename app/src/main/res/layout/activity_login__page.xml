<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhis.crackit4.Login_Page">

    <Button
        android:id="@+id/AboutMe"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="468dp"
        android:layout_marginTop="368dp"
        android:background="@drawable/buttonstylelightgradient"
        android:fontFamily="@font/bowlby_one_sc"
        android:onClick="about"
        android:text="About Me"
        android:textColor="#fff"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Easy_Mode"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/buttonstylelightgradient"
        android:fontFamily="@font/bowlby_one_sc"
        android:onClick="easypressed"
        android:text="Easy Mode"
        android:textColor="#fff"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/Hard_Mode"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="268dp"
        android:background="@drawable/buttonstylelightgradient"
        android:fontFamily="@font/bowlby_one_sc"
        android:onClick="hardpressed"
        android:text="Hard Mode"
        android:textColor="#fff"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:background="@color/starlight"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <TextView
            android:id="@+id/guess_the_number"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/bowlby_one_sc"
            android:textColor="#fff"
            android:textAlignment="center"
            android:paddingTop="15dp"
            android:text="Guess The Number"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>



    <Button
        android:id="@+id/Quit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="568dp"
        android:layout_marginTop="468dp"
        android:background="@drawable/buttonstylelightgradient"
        android:fontFamily="@font/bowlby_one_sc"
        android:onClick="quitit"
        android:text="Quit"
        android:textColor="#fff"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/howtoplay"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_margin="368dp"
        android:layout_marginTop="468dp"
        android:background="@drawable/buttonstylelightgradient"
        android:fontFamily="@font/bowlby_one_sc"
        android:onClick="howtoplay"
        android:text="How to play"
        android:textColor="#fff"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
