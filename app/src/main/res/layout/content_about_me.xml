                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_person_add_black_24dp"/>

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
